<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp" >
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Task title -->
        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Task 7864"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvTaskStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assigned"
            android:textColor="#5266fa"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Time estimate -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_clock"
            android:layout_marginHorizontal="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTaskTime"
            app:layout_constraintEnd_toStartOf="@+id/tvTaskTime"
            app:layout_constraintTop_toTopOf="@+id/tvTaskTime" />
        <TextView
            android:id="@+id/tvTaskTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 h"
            android:drawablePadding="4dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="@id/tvTaskStatus"
            app:layout_constraintEnd_toStartOf="@id/tvTaskStatus"
            android:layout_marginEnd="8dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tvTaskDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="This is a task description..."
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tvTaskTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>